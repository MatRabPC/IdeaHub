<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uoit.rara.finalexam.ShowIdeaActivity"
    tools:showIn="@layout/activity_show_idea">


    <TextView
        android:id="@+id/lblName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview" />

    <ImageView
        android:id="@+id/imgIco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/lblDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <!--Button
        android:id="@+id/btnEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:onClick="editIdea"/-->

    <!--Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:onClick="deleteIdea"/ -->

    <!--Button
        android:id="@+id/btnAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_alarm"
        android:onClick="setAlarm"/-->

    <TextView
        android:id="@+id/lblLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_thought" />

    <TextView
        android:id="@+id/lblAlarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/alarm" />

</LinearLayout>
